.header{
  line-height: 60rpx;
  height: 60rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
}
.fapiao_apply{
  font-size: 30rpx;
  color: #333333;
}
.kaipiao_history{
  font-size: 24rpx;
  color: #333333;
}
.fapiao_point_me{
  width: 100%;
  background-color: #ffffff;
  margin-top: 20rpx;
}
.point_me_cnt{
  position: relative;
  display: flex;
  flex-direction: row;
  padding: 38rpx;
}
.point_me_cnt_yuan{
  width: 78rpx;
  height: 78rpx;
  border: 1rpx solid #e4e4e4;
  border-radius: 50%;
  text-align: center;
  margin-right: 16rpx;
  margin-top: 16rpx;
}
.point_me_cnt_img{
  width: 37rpx;
  height: 38rpx;
  margin: 20rpx auto;
}
.point_me_cnt_text{
  display: flex;
  flex-direction: column;
  letter-spacing: 1rpx;
}
.point_me_img{
  width: 15rpx;
  height: 17rpx;
  margin-right: 9rpx;
}
/* 可批量 */
