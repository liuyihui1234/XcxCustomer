/* input的默认样式 */
page{
  background-color: #f8f8f8;
}
input{
  overflow: visible;
}
.header{
  width: 100%;
  height: 168rpx;
  background-color: #ffffff;
  padding-top: 40rpx;
  box-shadow: 0rpx 1rpx 2rpx 2rpx #e9e9e9;
}
.input_box{
  margin: 0 auto;
  border: 1rpx solid #cccccc;
  width: 670rpx;
  height: 78rpx;
  padding-left: 1em;
}
.number_input{
  font-size: 26rpx;
  color: #999999;
  line-height: 80rpx;
}
.kaipiao{
  position: relative;
  width: 100%;
  height: 26rpx;
  /* background-color: rgb(255, 0, 157); */
  text-align: center;
  padding-top:60rpx; 
  padding-bottom:60rpx; 
}
.kaipiao_line{
  width: 590rpx;
  height: 1rpx;
  background-color: #dddddd;
  margin: 0 auto;
}
.kaipiao_text{
  position: absolute;
  left: 50%;
  margin-left: -82rpx;
  top: 50%;
  margin-top: -13rpx;
  background-color: #f8f8f8;
  letter-spacing: 12rpx;
  font-size: 26rpx;
  color: #666666;
  padding-left: 12rpx;
}
.yuan_box{
  text-align: center;
}
.yuan{
  width: 88rpx;
  height: 88rpx;
  border: 1rpx solid #cecece;
  border-radius: 50%;
  margin: auto;
}
.number_img{
  width: 44rpx;
  height: 44rpx;
  margin-top: 20rpx; 
}
.yuan_box_text{
  display: block;
  margin-top: 22rpx;
  font-size: 26rpx;
  color: #666666;
}
.intro_text{
  font-size: 26rpx;
  color: #666666;
  margin-top: 52rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  line-height: 44rpx;
  text-align: left;
}