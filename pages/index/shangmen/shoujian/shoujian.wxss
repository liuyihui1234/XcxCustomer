  background-color: #ffffff;
  text-align: center;
}
.button_keep{
  width: 420rpx;
  height: 96rpx;
  border-radius: 96rpx;
  background-color: #999999;
  margin: 30rpx auto;
}
.button_keep:hover{
  background-color: #d03a3d;
}
