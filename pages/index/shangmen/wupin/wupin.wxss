/* pages/index/shangmen/wupin/wupin.wxss */
/* 包裹类型 */
.baoguo_type_title{
  font-size: 28rpx;
  color: #333333;
}
.baoguo_type_cnt_box{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 0 39rpx;
}
.baoguo_type{
  background-color: #ffffff;
}
.baoguo_type_title{
  padding:30rpx 39rpx;
}
.baoguo_type_cnt{
  width: 206rpx;
  height: 58rpx;
  border: 1rpx solid #dcdcdc;
  margin-bottom: 30rpx;
  text-align: center;
  line-height: 58rpx;
}
.baoguo_type_cnt:hover{
  background-color: #cb252a;
  color: #ffffff;
}
/* 预估重量 */
.predict_weight{
  margin-top: 10rpx;
  background-color: #ffffff;
  padding: 30rpx 39rpx;
}
.predict_weight_title{
  font-size: 28rpx;
  color: #333333;
}
.predict_weight_up{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.button_reduce,.button_add{
  width: 63rpx;
  height: 58rpx;
  text-align: center;
  line-height: 58rpx;
}
.input_count{
  width: 212rpx;
  height: 58rpx;
  border: 1rpx solid #e2e2e2;
  display: flex;
  flex-direction: row;
}
.input_count input{
  width: 130rpx;
  text-indent: 1em;
  text-align: center;
}
.input_count view{
  line-height: 58rpx;
}

.button_two{
  display: flex;
  flex-direction: row;
}

.predict_weight{
  display: flex;
  flex-direction: column;
}
.predict_weight_down{
  font-size: 24rpx;
  color: #999999;
  padding: 14rpx 0;
}

/* 物品图片与捎话 */
.additional_info{
  margin-top: 20rpx;
  background-color: #ffffff;
  padding: 32rpx 39rpx;
}
.additional_info_title{
  margin-bottom: 60rpx;
}
/* 照片方框 */
.cuIcon-cameraadd{
  margin-bottom: 35rpx; 
}
/* 多行input框 */
.cu-form-group{
  border: 1rpx solid #dcdcdc;
}
.textarea_box{
  position: relative;
  width: 100%;
  height: 100%;
}
.textarea_class{
  padding: 18rpx;
}
.grid.col-4.grid-square.flex-sub{
 margin-bottom:35rpx;

}
.lower_right_corner{
  position: absolute;
  right: 18rpx;
  bottom: 10rpx;
  color: #999999;
}
/* 设置多行文本的高度 */
.cu-form-group textarea{
  height:2.4em;
}
/* 带纸箱 */
.be_careful{
  position: relative;
  display: flex;
  flex-direction: row;
  margin-top: 38rpx;
  font-size: 24rpx;
}
.bg_color{
  background-color: #f3f3f3;
  margin-right: 20rpx;
  padding: 15rpx 25rpx;
  border-radius: 54rpx;
}
.color_red{
  position: absolute;
  right: 0;
  color: #cb252a;
  padding-top: 15rpx;
}
.remarks_info{
  color: #666666;
  font-size: 24rpx;
  line-height: 40rpx;
  margin-top: 30rpx;
}
/* 确定按钮 */
.btn_box{
  background-color: #cb252a;
  font-size: 32rpx;
  color: #ffffff;
  padding: 33rpx 260rpx;
  border-radius: 98rpx;
  text-align: center;
  margin-top: 107rpx;
} 