/* pages/chaxun/tousu/tousu.wxss */
page{
  background-color: #f0f0f0;
}
.tousu_c{
  margin: 0 40rpx;
}
.title{
  font-size: 30rpx;
  color: #333;
  padding-top: 40rpx;
}
.block{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.block_item{
  width: 308rpx;
  height: 210rpx;
  background-color: #fff;
  margin-top: 40rpx;
  float: left;
}
.block_item:nth-child(1),
.block_item:nth-child(3),
.block_item:nth-child(5),
.block_item:nth-child(7){
  margin-left: 50rpx;
}
.block_item .image{
  width: 62rpx;
  height: 66rpx;
  margin: 45rpx auto 0 auto;
}
.block_item image{
  width: 100%;
  height: 100%;
  background-size: contain;
}
.block_item .text{
  margin-top: 30rpx;
  text-align: center;
}